<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.smalldatalab.android.pam"
    android:versionCode="20150325"
    android:versionName="@string/pam_version_name" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> 
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name="org.openmhealth.pam.PAMActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="org.openmhealth.pam.ACTION_CHOOSE_IMAGE" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:path="choose_image"
                    android:scheme="org.openmhealth.pam" />
            </intent-filter>
        </activity>
        <activity android:name="org.openmhealth.pam.SigninActivity"/>
        <activity android:name="org.openmhealth.utils.reminders.ReminderListActivity"/>
        <activity android:name="org.openmhealth.utils.reminders.ReminderSetupActivity"/>
        <activity android:name="org.openmhealth.pam.AuthActivity"/>
        <activity
            android:name="edu.cornell.tech.smalldata.omhclientlib.StartUserInterventionActivity"
            android:label="@string/title_activity_start_consent_screen" >
        </activity>

        <service
            android:name="edu.cornell.tech.smalldata.omhclientlib.services.AuthorizationCodeService"
            android:enabled="true"
            android:exported="false" >
        </service>
        <service
            android:name="edu.cornell.tech.smalldata.omhclientlib.services.UploadToDsuService"
            android:enabled="true"
            android:exported="false" >
        </service>
        <service android:name="edu.cornell.tech.smalldata.omhclientlib.syncadapter.AuthenticatorService" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/dsu_authenticator" />
        </service>
        <service
            android:name="edu.cornell.tech.smalldata.omhclientlib.syncadapter.SyncAdapterService"
            android:exported="true"
            android:process=":sync" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>
        <service
            android:name="edu.cornell.tech.smalldata.omhclientlib.dsu.DSUService"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>
            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/dsu_syncer" />
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/dsu_authenticator" />
        </service>
        <activity android:name="edu.cornell.tech.smalldata.omhclientlib.dsu.DSUAccountAuthActivity"/>
        <receiver android:name="org.openmhealth.utils.reminders.ReminderManager">
        	<intent-filter>
        		<action android:name="REMINDER_ACTION"/>
        		<action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>	
        <provider
            android:name="edu.cornell.tech.smalldata.omhclientlib.syncadapter.SyncAdapterContentProvider"
            android:authorities="@string/omhclientlib_syncadapter_provider_authority"
            android:exported="false"
            android:syncable="true" />
    </application>

</manifest>